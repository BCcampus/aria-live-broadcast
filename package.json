{
  "name": "aria-live-broadcast-root",
  "version": "0.0.1",
  "description": "This package.json is not published to npm, modify the file in package/package.json",
  "packageManager": "yarn@4.1.0",
  "workspaces": [
    "docs",
    "package"
  ],
  "scripts": {
    "clean": "rimraf package/dist",
    "build": "rollup -c rollup.config.mjs && esno scripts/generate-dts",
    "prettier:check": "prettier --check \"**/*.{ts,tsx}\"",
    "prettier:write": "prettier --write \"**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "lint": "npm run lint:eslint && npm run lint:stylelint",
    "lint:eslint": "eslint --cache --ext .ts,.tsx .",
    "lint:stylelint": "stylelint \"**/*.css\" --cache",
    "jest": "jest",
    "test": "npm run syncpack && npm run prettier:check && npm run typecheck && npm run lint && npm run jest",
    "release:patch": "esno scripts/release patch && npm run docs:deploy",
    "release:minor": "esno scripts/release minor && npm run docs:deploy",
    "release:major": "esno scripts/release major && npm run docs:deploy",
    "release:local": "esno scripts/release major --stage alpha --local",
    "docgen": "esno scripts/docgen",
    "dev": "npm run docgen && cd docs && npm run dev",
    "docs:build": "npm run docgen && cd docs && npm run build",
    "docs:deploy": "npm run docs:build && esno scripts/nojekyll && gh-pages -d docs/out -t true",
    "storybook": "storybook dev -p 8271",
    "syncpack": "syncpack list-mismatches",
    "syncpack:format": "syncpack format"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "@storybook/addon-essentials": "^7.6.17",
    "@storybook/blocks": "^7.6.17",
    "@storybook/react": "^7.6.17",
    "@storybook/react-vite": "^7.6.17",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/css-modules": "^1.0.5",
    "@types/fs-extra": "^11.0.4",
    "@types/identity-obj-proxy": "^3.0.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.70",
    "@types/react-dom": "^18.2.22",
    "@types/signale": "^1.4.7",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "esbuild": "^0.20.2",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-mantine": "^3.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "esno": "^4.7.0",
    "execa": "^8.0.1",
    "fs-extra": "^11.2.0",
    "gh-pages": "^6.1.1",
    "hash-css-selector": "^1.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "mantine-docgen-script": "^1.3.1",
    "new-github-release-url": "^2.0.0",
    "open": "^10.1.0",
    "postcss": "^8.4.38",
    "postcss-preset-mantine": "1.13.0",
    "prettier": "^3.2.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.13.0",
    "rollup-plugin-banner2": "^1.2.2",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-node-externals": "^7.1.1",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-visualizer": "^5.12.0",
    "signale": "^1.4.0",
    "simple-git": "^3.23.0",
    "storybook": "^7.6.17",
    "storybook-dark-mode": "^3.0.3",
    "stylelint": "^16.3.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "syncpack": "^12.3.0",
    "typescript": "5.4.3",
    "version-next": "^1.0.2",
    "vite": "^4.5.3",
    "yargs": "^17.7.2"
  }
}
